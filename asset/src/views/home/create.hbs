<div class="container h-100">
    <div>
        <input id="tblName" type="text" placeholder="Tên sản phẩm">
    </div>

    <div>
        <input id="tblCategoryId" type="number" placeholder="Id danh mục">
    </div>

    <div>
        <input id="tblImage" type="text" placeholder="đường dẫn hình ảnh">
    </div>

    <div>
        <input id="tblPrice" type="text" placeholder="Giá tiền">
    </div>

    <button id="btnCreate">Thêm</button>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {


        $('#btnCreate').click(function () {
            var data = {
                name: $('#tblName').val(),
                categoryId: $('#tblCategoryId').val(),
                image: $('#tblImage').val(),
                price: $('#tblPrice').val(),
            }

            console.log(data);

            $.ajax({
                url: '/create',
                type: 'POST',
                data: JSON.stringify(data),
                dataType: 'json',
                contentType: 'application/json',
                success: function (res) {
                    if (res.success) {
                        window.location.href = '/';
                        console.log('Thêm dữ liệu thành công');
                    } else {
                        console.log('thêm dữ liệu thất bại');
                    }
                }
            })


        });




    });
</script>